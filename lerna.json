{
  "lerna": "3.11.0",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "init": {
      "exact": true
    },
    "bootstrap": {
      "hoist": [
        "tap",
        "eslin*",
        "husky",
        "prettier",
        "pretty-quick"
      ]
    },
    "publish": {
      "allowBranch": "master"
    }
  },
  "npmClientArgs": [
    "--registry=https://registry.npmjs.org/"
  ]
}
