<div class="c-field {{ styleModifier }}">

	<label for="{{ id }}" class="c-field__label">{{ label }}</label>

    <div class="c-field__body">

        <textarea class="c-textarea" id="{{ id }}" placeholder="{{ placeholder }}" value="{{ value }}" rows="5" {{#if disabled }}disabled{{/ if }} {{#if readOnly }}readonly{{/ if }}>{{ value }}</textarea>

    </div><!-- end c-field__body -->

    {{#if fieldNote }}
    <div class="c-field__note">{{{ fieldNote }}}</div>
    {{/ if }}

</div><!-- end c-field -->
