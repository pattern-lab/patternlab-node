<div class="checkout">
    <div class="checkout__wrapper">
        <div class="checkout__header-container">
            {{> organisms-checkout-header }}
            {{> molecules-checkout-content-toggle }}
        </div>

        <div role="main" class="checkout__content">
            <div class="checkout__content-container">
                {{> organisms-checkout-header(show_breadcrumbs: true, class_second: 'breadcrumb__item--completed', class_third: 'breadcrumb__item--current', breadcrumbText_first: 'Cart', breadcrumbText_second: 'Customer information', breadcrumbText_third: 'Shipping method', breadcrumbText_fourth: 'Payment method') }}

                {{> molecules-checkout-customer-address }}
                {{> organisms-checkout-form-shipping-method }}

                {{> molecules-checkout-step-footer-next(prevLinkText: 'Return to customer information', nextButtonText: 'Continue to payment method') }}
                {{> organisms-checkout-main-footer(firstItemText: 'Privacy policy', secondItemText: 'Refund policy', thirdItemText: 'Terms of service') }}
            </div>
        </div>

        <aside class="checkout__sidebar">
            <div class="checkout__sidebar-container">
                <div class="order-summary order-summary--is-collapsed" data-order-summary data-set-by-height="-margin-top">
                    {{> organisms-checkout-price-header(headerText.first: 'Secure Payment', headerText.second: 'Free shipping & Return', trustedShops_description: 'Authorized Partner' ) }}

                    {{> molecules-checkout-product-table(product_title_first: 'Weekender', product_description_first: 'Nappa Leather / Black', product_price_first: '€450.00', product_title_second: 'The Tote', product_description_second: 'Vacchetta Leather / Tan', product_price_second: '€590.00', product_title_third: 'iPhone 6 Plus Sleeve', product_description_third: 'Full-Grain Leather / Red', product_price_third: '€70.00', ) }}
                    {{> organisms-checkout-voucher-form }}
                    {{> molecules-checkout-total-line-table }}

                    {{> organisms-checkout-price-footer(footerText.first: 'Finest Italian leather', footerText.second: 'Free Travel Assistent Service', footerText.third: 'Smart Technology') }}
                </div>
            </div>
        </aside>
    </div>
</div>