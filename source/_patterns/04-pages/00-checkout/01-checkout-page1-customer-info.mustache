<div class="checkout">
    <div class="checkout__wrapper">
        <div class="checkout__header-container">
            {{> organisms-checkout-header }}
            {{> molecules-checkout-content-toggle }}
        </div>

        <div role="main" class="checkout__content">
            {{> organisms-checkout-header }}

            {{> organisms-checkout-form-customer-information }}
            {{> organisms-checkout-form-shipping-address }}
            {{> molecules-checkout-step-footer-next(prevLinkText: 'Return to cart', nextButtonText: 'Continue to shipping method') }}
            {{> organisms-checkout-main-footer(firstItemText: 'Privacy policy', secondItemText: 'Refund policy', thirdItemText: 'Terms of service') }}
        </div>


        <aside class="checkout__sidebar">
            <div class="checkout__sidebar-container">
                <div class="order-summary order-summary--is-collapsed" data-order-summary data-set-by-height="-margin-top">
                    {{> organisms-checkout-price-header(headerText_first: 'Secure Payment', headerText_second: 'Free shipping & Return' ) }}

                    {{> molecules-checkout-product-table }}
                    {{> organisms-checkout-voucher-form }}
                    {{> molecules-checkout-total-line-table }}

                    {{> organisms-checkout-price-footer(footerText_first: 'Finest Italian leather', footerText_second: 'Free Travel Assistent Service', footerText_third: 'Smart Technology') }}
                </div>
            </div>
        </aside>
    </div>
</div>