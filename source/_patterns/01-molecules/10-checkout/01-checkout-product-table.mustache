    <td class="product__description">
      <span class="product__description__name order-summary__emphasis">{{ products.title.mini }}</span>
      <span class="product__description__variant order-summary__small-text">{{ products.material.mini }}</span>
    </td>
    <td class="product__price">
      <span class="order-summary__emphasis">€1.23</span>
    </td>
  </tr>
