<div class="section section--reductions hidden-on-desktop">
  <div class="section__header">
    <h2 class="section__title">{{ sectionTitleText || 'Aenean interdum arcu vel' }}</h2>
  </div>
  <div class="section__content">
    <div class="fieldset">
      <div class="field">
        <div class="field__input-btn-wrapper">
          <div class="field__input-wrapper">
            <label for="checkout_reduction_code" class="field__label">Gift card or discount code</label>
            <input type="text" id="checkout_reduction_code" name="checkout[reduction_code]" size="30" autocomplete="off"
                   data-discount-field="true" class="field__input" placeholder="Gift card or discount code">
          </div>
          <button class="field__input-btn btn btn--default btn--disabled" type="submit">
            <span class="btn__content visually-hidden-on-mobile">Apply</span>
            <i class="btn__content shown-on-mobile icon icon--arrow"></i>
            <i class="btn__spinner icon icon--button-spinner"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>